<div class="jumbotron text-center">
  <h1>Products</h1>
  <%= link_to 'Add New Product', new_admin_product_path %>
</div>

<div class="page-content page-container" id="page-content">
  <div class="d-flex justify-content-center">
    <div class="card user-card-full">
      <table class="table">
        <thead>
          <tr>
            <th> ID </th>
            <th> Name </th>
            <th> Value </th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td> <%= product.id %> </td>
              <td> <%= product.title %> </td>
              <td> <%= number_to_currency(product.price) %> </td>
              <td> <%= link_to 'Show', admin_product_path(product) %> </td>
              <td> <%= link_to 'Edit', edit_admin_product_path(product) %> </td>
              <td> <%= link_to "Delete", admin_product_path(product), data: { confirm: "Are you sure?" }, method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
