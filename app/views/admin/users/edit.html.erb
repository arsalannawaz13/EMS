<div class='container float-right'>
  <div class='row align-items-center'>
    <div class='col-5'>
      <h2>My EMS Profile</h2>

      <%= form_with(model: [:admin, @user], local: true) do |form| %>
        <div class="field">
          <%= form.label :full_name %>
          <%= form.text_field :full_name, class: 'form-control'%>
        </div>

        <div class="field">
          <%= form.label :email %>
          <%= form.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :password %>
          <%= form.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions mt-3">
          <p><%= form.submit "Update", class: 'btn btn-primary'%></p>
        </div>
      <% end %>

      <%= link_to "Back", :back, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
