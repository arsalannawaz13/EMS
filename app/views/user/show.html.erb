<div class="jumbotron text-center">
  <h1>My Profile</h1>
  <p><%= link_to "Edit Profile", edit_user_registration_path %></p>
  <%= link_to "Update Password", edit_user_path(current_user) %>
</div>
<div class="page-content page-container" id="page-content">
  <div class="d-flex justify-content-center">
    <div class="card user-card-full">
      <div class="row">
        <div class="col-sm-8" style="margin: 10px">
          <p class="m-b-10 f-w-600">Full Name</p> 
          <h6 class="text-muted f-w-400"><%= current_user.full_name %></h6>
        </div>
        <div class="col-sm-8" style="margin: 10px">
          <p class="m-b-10 f-w-600">Email</p>
          <h6 class="text-muted f-w-400"><%= current_user.email %></h6>
        </div>
        <div class="col-sm-8" style="margin: 10px">
          <p class="m-b-10 f-w-600">Admin Status</p>
          <h6 class="text-muted f-w-400"><%= current_user.admin %></h6>
        </div>
      </div>
    </div>
  </div>
</div>
